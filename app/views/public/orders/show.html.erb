<!--（顧客）注文履歴詳細-->
<main>
  <div class = "container-fluid" style = "margin-top: 40px">
    <div class = "row">
      <div class = "offset-1 h3">
        <div style = "background-color: #EEEEEE; text-align: center; padding: 0 20px">注文履歴詳細</div>
      </div>
    </div>
  </div>
    <div class = "row" style = "margin-top: 40px">
      <div class = "col-5 offset-1">
        注文情報
        <table class = "table table-bordered">
          <tr>
            <th bgcolor = "#EEEEEE">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th bgcolor = "#EEEEEE">配送先</th>
            <td>
              〒<%= @order.shipping_postal_code %><br>
              <%= @order.shipping_address %><br>
              <%= @order.shipping_name %>
            </td>
          </tr>
          <tr>
            <th bgcolor = "#EEEEEE">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th bgcolor = "#EEEEEE">ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </table>
      </div>
      <div class = "col-3">
        請求情報
        <table class = "table table-bordered">
          <tr>
            <th bgcolor = "#EEEEEE">商品合計</th>
            <td><%= @order.total_price - @order.shipping_price %></td>
          </tr>
          <tr>
            <th bgcolor = "#EEEEEE">配送料</th>
            <td>
              <%= @order.shipping_price %><br>
            </td>
          </tr>
          <tr>
            <th bgcolor = "#EEEEEE">ご請求額</th>
            <td><%= @order.total_price %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class = "row" style = "margin-top: 20px">
      <div class = "col-6 offset-1">
        注文内容
        <table class = "table table-bordered">
          <thead>
            <tr bgcolor = "#EEEEEE">
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.purchase_price %></td>
                <td><%= order_detail.amount %></td>
                <td><%= order_detail.purchase_price * order_detail.amount %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>