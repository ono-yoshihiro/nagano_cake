<main>
  <div class = "container">
    <div class = "row" style = "margin-top: 20px">
      <h3>配送先登録/一覧</h3>
    </div>

    <%= form_with model: @newaddress, url: '/addresses', method: :post do |f| %>
    <div class = "row" style = "margin-top: 20px">
      <div class = "col-3">
        郵便番号(ハイフンなし)
      </div>
      <div class = "col-3">
        <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
      </div>
    </div>
    <div class = "row" style = "margin-top: 20px">
      <div class = "col-3">
        住所
      </div>
      <div class = "col-6">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div>
    </div>
    <div class = "row" style = "margin-top: 20px">
      <div class = "col-3">
        宛名
      </div>
      <div class = "col-3">
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control" %>
      </div>
      <div class = "col-2 offset-3">
        <%= f.submit '新規登録', class: "form-control btn btn-success" %>
      </div>
    <% end %>

  <div class = "row" style = "margin-top: 40px">
      <table class = "table table-bordered">
        <thead class = "table-secondary">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_addresses_path(address.id), class: "btn btn-success" %>
              <%= link_to "削除する", destroy_addresses_path(address.id), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>

    </div>

  </div>


</main>