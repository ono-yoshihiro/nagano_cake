<main>
  <div class = "container-fluid">
    <div class = "row">
      配送先編集
    </div>

    <%= form_with model: @editaddress, :url => {:action => :update}, method: :post do |f| %>
    <div class = "row">
      <div class = "col-3">
        郵便番号(ハイフンなし)
      </div>
      <div class = "col-3">
        <%= f.text_field :postal_code , class: "form-control col-3" %>
      </div>
    </div>
    <div class = "row">
      <div class = "col-3">
        住所
      </div>
      <div class = "col-6">
        <%= f.text_field :address , class: "form-control col-3" %>
      </div>
    </div>
    <div class = "row">
      <div class = "col-3">
        宛名
      </div>
      <div class = "col-3">
        <%= f.text_field :name , class: "form-control col-3" %>
      </div>
      <div class = "col-2 offset-6">
        <%= f.submit "変更内容を保存", class: "form-control col-2 btn btn-success" %>
      </div>
    </div>
    <% end %>
  </div>
</main>