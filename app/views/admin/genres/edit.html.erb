<!--（管理者）ジャンル編集-->
<main>
  <div class = "container-fluid" style = "margin-top: 40px">
    <div class = "row">
      <div class = "offset-1 h3">
        <div style = "background-color: #EEEEEE; text-align: center; padding: 0 20px">ジャンル編集</div>
      </div>
    </div>
    <%= form_with model: @editgenre, :url => {:action => :update}, method: :patch do |f| %>
      <div class = "row form-group" style = "margin-top: 30px">
        <div class = "col-1 d-flex align-items-center justify-content-center">
          <%= f.label :ジャンル名, class: "center-block", :style => "margin: 0" %>
        </div>
        <div class = "col-2">
          <%= f.text_field :name , class: "form-control" %>
        </div>
        <div class = "col-1">
          <%= f.submit "変更を保存", class: "form-control btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</main>