<main>

  <div>
    <h1>ジャンル一覧・追加</h1>

    <%= form_with model: @newgenre, url: '/admin/genres', method: :post do |f| %>
      <div class="">
        <label for="">ジャンル名</label>
        <%= f.text_field :name , class:"" %>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録", class:"" %>
      </div>
    <% end %>
  </div>

  <div class="">
    <table class="">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th><!--<th colspan="#"></th>-->
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", "/admin/genres/#{genre.id}/edit", class: "" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</main>