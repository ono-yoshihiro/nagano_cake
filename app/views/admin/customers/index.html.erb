<!--（管理者）会員一覧-->
<main>
  <div class = "container-fluid" style = "margin-top: 40px">
    <div class = "row">
      <div class = "offset-1 h3">
        <div style = "background-color: #EEEEEE; text-align: center; padding: 0 20px">会員一覧</div>
      </div>
    </div>
  <div class = "row" style = "margin-top: 20px">
    <div class = "col-10 offset-1">
      <table class = "table">
        <thead>
          <tr bgcolor = "#EEEEEE">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <u class = "text-dark"><%= customer.last_name %><%= customer.first_name %></u>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == true %>
                <td style = "color: gray">退会</td>
              <% else %>
                <td class = "text-success">有効</td>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class = "d-flex align-items-center justify-content-center">
        <%= paginate @customers, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</main>