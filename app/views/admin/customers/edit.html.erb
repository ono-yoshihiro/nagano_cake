<main>
  <h3><%= @editcustomer.last_name %><%= @editcustomer.first_name %>さんの会員情報編集</h3>

  <h4>会員ID</h4>
  <%= @editcustomer.id %>

  <%= form_with model: @editcustomer, :url => {:action => :update}, method: :patch do |f| %>

  <h4>氏名</h4>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>

  <h4>フリガナ</h4>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>

  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>

  <h4>住所</h4>
  <%= f.text_field :address %>

  <h4>電話番号</h4>
  <%= f.text_field :telephone_number %>

  <h4>メールアドレス</h4>
  <%= f.email_field :email %>

  <h4>会員ステータス</h4>
    <%= f.radio_button :is_deleted, :false %>
    <%= f.label :is_deleted, "有効", {value: :false, style: ""} %>
    <%= f.radio_button :is_deleted, :true %>
    <%= f.label :is_deleted, "退会", {value: :true, style: ""} %>

    <div>
    <%= f.submit '変更を保存' %>
    </div>
  <% end %>

</main>