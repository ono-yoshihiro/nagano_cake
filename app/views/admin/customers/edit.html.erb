<!--（管理者）会員情報編集-->
<main>
  <div class = "container-fluid" style = "margin-top: 40px">
    <div class = "row">
      <div class = "offset-1 h3">
        <div style = "background-color: #EEEEEE; text-align: center; padding: 0 20px">
          <%= @editcustomer.last_name %><%= @editcustomer.first_name %>さんの会員情報編集
        </div>
      </div>
    </div>
    <div class = "row" style = "margin-top: 20px; margin-bottom: 16px">
      <div class = "col-1 offset-1">
        会員ID
      </div>
      <div class = "col-1">
        <%= @editcustomer.id %>
      </div>
    </div>
    <%= form_with model: @editcustomer, url: admin_customer_path(id = @editcustomer.id), method: :patch do |f| %>
      <div class = "row form-group">
        <div class = "col-1 offset-1">
          氏名
        </div>
        <div class = "col-2">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class = "col-2">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group">
        <div class = "col-1 offset-1">
          フリガナ
        </div>
        <div class = "col-2">
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
        <div class = "col-2">
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group">
        <div class = "col-1 offset-1">
          郵便番号
        </div>
        <div class = "col-2">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group">
        <div class = "col-1 offset-1">
          住所
        </div>
        <div class = "col-5">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group">
        <div class = "col-1 offset-1">
          電話番号
        </div>
        <div class = "col-2">
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group">
        <div class = "col-1 offset-1">
          メールアドレス
        </div>
        <div class = "col-2">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group">
        <div class = "col-1 offset-1">
          会員ステータス
        </div>
        <div class = "col-2">
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効", {value: :false} %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会", {value: :true} %>
        </div>
      </div>
      <div class = "row">
        <div class = "col-2 offset-2">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</main>