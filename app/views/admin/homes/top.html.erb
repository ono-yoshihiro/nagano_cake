<!--（管理者）注文履歴一覧-->
<main>
  <div class = "container-fluid" style = "margin-top: 40px">
    <div class = "row">
      <div class = "offset-1 h3">
        <div style = "background-color: #EEEEEE; text-align: center; padding: 0 20px">注文履歴一覧</div>
      </div>
    </div>
    <div class = "row" style = "margin-top: 20px">
      <table class = "table border-bottom col-10 offset-1">
        <thead>
          <tr bgcolor = "#EEEEEE">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(id=order.id) do %>
                  <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                <% end %>
              </td>
              <td>
                <%= order.customer.full_name %>
              </td>
              <td>
                <%= order.order_details.all.sum(:amount) %>
              </td>
              <td>
                <%= order.status_i18n %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class = "row d-flex align-items-center justify-content-center" style = "margin-top: 20px">
      <%= paginate @orders, theme: 'bootstrap-5' %>
    </div>
  </div>
</main>