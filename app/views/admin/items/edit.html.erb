<!--（管理者）商品編集-->
<main>
  <div class = "container" style = "margin-top: 40px">
    <div class = "row">
      <div class = "offset-1 h3">
        <div style = "background-color: #EEEEEE; text-align: center; padding: 0 20px">商品編集</div>
      </div>
    </div>
    <%= form_with model: @edititem, :url => {:action => :update}, method: :patch do |f| %>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-2 d-flex align-items-center">
          <%= f.label :商品画像, :style => "margin: 0" %>
        </div>
        <div class = "col-4">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-2 d-flex align-items-center">
          <%= f.label :商品名, :style => "margin: 0" %>
        </div>
        <div class = "col-4">
          <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px;">
        <div class = "col-2 offset-2">
          <%= f.label :商品説明, :style => "margin-top: 8px" %>
        </div>
        <div class = "col-4">
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control", :style => "height: 150px" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-2 d-flex align-items-center">
          <%= f.label :ジャンル, :style => "margin: 0" %>
        </div>
        <div class = "col-4">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"}, class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-2 d-flex align-items-center">
          <%= f.label :税抜価格, :style => "margin: 0" %>
        </div>
        <div class = "col-4">
          <%= f.text_field :price , placeholder: "1000", class: "form-control" %>
        </div>
        <div class = "col-1 d-flex align-items-center" style = "padding: 0">
          円
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-2">
          <%= f.label :販売ステータス %>
        </div>
        <div class = "col-4">
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", value: true %>
          <%= f.radio_button :is_active, false, :style => "margin-left:20px;" %>
          <%= f.label :is_active, "販売停止中", value: false %>
        </div>
      </div>
      <div  class = "row form-group">
        <div class = "col-2 offset-5">
          <%= f.submit '変更を保存', class: "form-control btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</main>