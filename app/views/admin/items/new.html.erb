<main>
  <h1>商品新規登録</h1>

<!--フォームのサイズはCSSで変更する？-->
  <%= form_with model: @newitem, :url => {:action => :create}, method: :post do |f| %>
    <h4>商品画像</h4>
    <%= f.file_field :image, accept: "image/*" %>

    <h4>商品名</h4>
    <%= f.text_field :name, placeholder: "商品名", size: 30 %>

    <h4>商品説明</h4>
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", size: "32x10" %>

    <h4>ジャンル</h4>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--", size: 100 %>

    <h4>税抜価格</h4>
    <%= f.text_field :price , placeholder: "1000", size: 30 %>円

    <h4>販売ステータス</h4>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "販売中", {value: :true, style: ""} %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "販売停止中", {value: :false, style: ""} %>

    <div>
    <%= f.submit '新規登録' %>
    </div>
  <% end %>

</main>