<!--（管理者）商品新規登録-->
<main>
  <div class = "container" style = "margin-top: 40px">
    <div class = "row">
      <div class = "h3">
        <div style = "background-color: #EEEEEE; text-align: center; padding: 0 20px">商品新規登録</div>
      </div>
    </div>
    <%= form_with model: @newitem, :url => {:action => :create}, method: :post do |f| %>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-1 d-flex align-items-center">
          <%= f.label :商品画像, :style => "margin: 0" %>
        </div>
        <div class = "col-4">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-1 d-flex align-items-center">
          <%= f.label :商品名, :style => "margin: 0" %>
        </div>
        <div class = "col-4">
        <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-1">
          <%= f.label :商品説明, :style => "margin-top: 8px" %>
        </div>
        <div class = "col-4">
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control", :style => "height: 150px" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-1 d-flex align-items-center">
          <%= f.label :ジャンル, :style => "margin: 0" %>
        </div>
        <div class = "col-4">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--" }, class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-1 d-flex align-items-center">
          <%= f.label :税抜価格, :style => "margin: 0" %>
        </div>
        <div class = "col-4">
          <%= f.text_field :price , placeholder: "1000", class: "form-control" %>
        </div>
        <div class = "col-1 d-flex align-items-center" style = "padding: 0">
          円
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-1 d-flex align-items-center">
          <%= f.label :販売ステータス, :style => "margin: 0" %>
        </div>
        <div class = "col-4">
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", value: true %>
          <%= f.radio_button :is_active, false, :style => "margin-left:20px;" %>
          <%= f.label :is_active, "販売停止中", value: false %>
        </div>
      </div>
      <div  class = "row form-group" style = "margin-top: 30px">
        <div class = "col-2 offset-4">
          <%= f.submit '新規登録', class: "form-control btn btn-success" %>
        </div>
    <% end %>
  </div>
</main>