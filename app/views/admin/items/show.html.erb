<!--（管理者）商品詳細-->
<main>
  <div class = "container-fluid" style = "margin-top: 40px">
    <div class = "row">
      <div class = "offset-1 h3">
        <div style = "background-color: #EEEEEE; text-align: center; padding: 0 20px">商品詳細</div>
      </div>
    </div>
    <div class = "row">
      <div class = "col-3 offset-1">
        <!--画像のサイズ指定が必要-->
        <%= image_tag @item.image, class: "img-fluid" %>
      </div>
      <div class ="col-8">
        <div class = "row">
          <div class = "col-2">商品名</div>
          <div class = "col-10"><%= @item.name %></div>
        </div>
        <div class = "row" style = "margin-top:20px">
          <div class = "col-2">商品説明</div>
          <div class = "col-10"><%= @item.introduction %></div>
        </div>
        <div class = "row" style = "margin-top:20px">
          <div class = "col-2">ジャンル</div>
          <div class = "col-10"><%= @item.genre.name %></div>
        </div>
        <div class = "row" style = "margin-top:20px">
          <div class = "col-2">税込価格<br>(税抜価格)</div>
          <div class = "col-10"><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</div>
        </div>
        <div class = "row" style = "margin-top:20px">
          <div class = "col-2">販売ステータス</div>
          <div class = "col-10">
            <% if @item.is_active == true %><p class = "text-success"><b>販売中</b></p>
            <% else %><p class = "text-secondary">販売停止中</p>
            <% end %>
          </div>
        </div>
        <div class = "row" style = "margin-top:30px">
          <div class = "col-2 offset-1">
            <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>