<main>
  <h1>商品詳細</h1>

  <%= image_tag @item.image, size: "200x200" %>

  <h4>商品名</h4>
  <%= @item.name %>

  <h4>商品説明</h4>
  <%= @item.introduction %>

  <h4>ジャンル</h4>
  <%= @item.genre.name %>

  <h4>税込価格<br>(税抜価格)</h4>
  <%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円

  <h4>販売ステータス</h4>
  <% if @item.is_active == true %>販売中
  <% else %>販売停止中
  <% end %>

  <h4>
  <%= link_to "編集する", edit_admin_item_path(@item.id) %>
  </h4>

</main>