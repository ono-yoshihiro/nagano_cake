<!--（管理者）ログイン-->
<main>
  <div class = "container" style = "margin-top: 40px">
    <div class = "row">
      <div class = "h3">
        <div style = "background-color: #EEEEEE; text-align: center; padding: 0 20px">管理者ログイン</div>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-2">
          <%= f.label :メールアドレス %>
        </div>
        <div class = "col-6">
          <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 20px">
        <div class = "col-2 offset-2">
          <%= f.label :パスワード %>
        </div>
        <div class = "col-6">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
      <div class = "row form-group" style = "margin-top: 40px">
        <div class = "col-2 offset-4">
          <%= f.submit "ログイン", class: "btn btn-primary form-control" %>
        </div>
      </div>
    <% end %>
  </div>
</main>